{
    "extends": "@tsconfig/node14/tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonJS",
        "sourceMap": true,
        "baseUrl": "./",
        "allowJs": true,
        "paths": {
            "@config": [
                "src/config/index.js"
            ],
            "@interfaces/*": [
                "src/interfaces/*"
            ],
            "@src/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}